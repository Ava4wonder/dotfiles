#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit
[[ -n "${VERBOSE:-}" ]] && set -o verbose
[[ -n "${DEBUG:-}" ]] && IS_DEBUG=true || IS_DEBUG=false

usage() {
cat<<EOF
Usage: neoscript <path>

Arguments:
    <path>:       Absolute path for new script
EOF
}

main() {
  [[ -z "${1:-}" ]] && usage && exit 0

  path=$1
  if [[ -e $path ]]; then
    nvim "$path"
    exit $?
  fi

  echo "bash" > "$path"
  chmod +x "$path"
  nvim "$path"
}

main "$@"
