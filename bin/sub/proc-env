#!/usr/bin/env bash
# shellcheck disable=SC1090

set -o errexit
set -o nounset
set -o pipefail
shopt -s inherit_errexit
[[ -n "${VERBOSE:+x}" ]] && set -o verbose
[[ -n "${DEBUG:-}" ]] && IS_DEBUG=true || IS_DEBUG=false


PID=${1:-}

if [[ -z "$PID" ]]; then
  echo "Usage: $0 <PID>" >&2
  exit 1
fi

linux() {
  tr '\0' '\n' < "/proc/$PID/environ"
}

mac() {
  ps -Eww -o command= "$PID" | less
}

system="$(uname -s)"
case "${system}" in
    Linux*)     linux;;
    Darwin*)    mac;;
    *)          echo "Unsupported system: ${system}" >&2 ;;
esac
