#!/usr/bin/env bash
# shellcheck disable=SC1090

set -o errexit
set -o nounset
set -o pipefail
shopt -s inherit_errexit
[[ -n "${VERBOSE:+x}" ]] && set -o verbose
[[ -n "${DEBUG:-}" ]] && IS_DEBUG=true || IS_DEBUG=false

# Provide sub completions
if [[ "${1:-}" == "--complete" ]]; then
  if [[ $COMP_CWORD -lt 3 ]]; then
    result=$(compgen -f "$2")
    if [[ -d $result ]]; then
      compgen -f "$result/"
    else
      echo "${result[@]}"
    fi
  fi
  exit 0
fi

chmod +x "$1"
