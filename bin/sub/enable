#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

readonly SCRIPT_DIR="$(cd -P -- "$(dirname -- "$0")" && pwd -P)"
readonly ENABLED_DIR=$SCRIPT_DIR/../../enabled

# shellcheck source=../../bash/plugable.bash
. "$SCRIPT_DIR/../../bash/plugable.bash"

# Provide sub completions
if [[ "${1:-}" == "--complete" ]]; then
  if (( $# < 3 )); then
    echo "${!t_map[@]}"
  else
    readonly t=$2
    readonly ts=${t_map[$t]}
    find "$SCRIPT_DIR/../../$ts" -d 1 -type f -name "*.bash" -print0 \
      | xargs -0 -n1 -I{} basename '{}' ".bash"
  fi
  exit 0
fi

readonly t=$1
readonly ts=${t_map[$t]}
shift 1
enable_it 600 "$@"
