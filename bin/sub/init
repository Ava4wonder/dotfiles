#!/usr/bin/env bash
set -e

print=""
if [ "$1" = "-" ]; then
  print=1
  shift
fi

shell="$1"
if [ -z "$shell" ]; then
  shell="$(basename "$SHELL")"
fi

resolve_link() {
  $(type -p greadlink readlink | head -1) $1
}

abs_dirname() {
  local cwd="$(pwd)"
  local path="$1"

  while [ -n "$path" ]; do
    cd "${path%/*}"
    local name="${path##*/}"
    path="$(resolve_link "$name" || true)"
  done

  pwd
  cd "$cwd"
}


if [ -z "$print" ]; then
  case "$shell" in
  bash )
    profile='~/.bash_profile'
    ;;
  zsh )
    profile='~/.zshenv'
    ;;
  * )
    profile='your profile'
    ;;
  esac

  { echo "# Load sub automatically by adding"
    echo "# the following to ${profile}:"
    echo ""
    echo 'export SUB_NAME="a"'
    echo 'export SUB_BIN_DIR="$HOME/bin/sub"'
    echo 'export SUB_COMPLETION_FILE="$HOME/.bash_completions/others/sub.bash"'
    echo 'eval "$("$SUB_NAME" init -)"'
  } >&2

  exit 1
fi

[[ -n "$SUB_COMPLETION_FILE" ]] && [[ -f "$SUB_COMPLETION_FILE" ]] && echo "source \"${SUB_COMPLETION_FILE}\""

OLD_IFS="$IFS"
IFS="|"
cat <<EOS
_sub_wrapper() {
  local command="\$1"
  if [ "\$#" -gt 0 ]; then
    shift
  fi

  command "$SUB_NAME" "\$command" "\$@"
}
EOS
IFS="$OLD_IFS"

# zsh can't pass argument with aliases, but bash can.
# zsh can have functions with the name being only numbers, but bash can't.
# fix both cases here by letting zsh have a function, and bash have its alias.
case "$shell" in
bash )
  echo "alias "$SUB_NAME"=_sub_wrapper"
  ;;
zsh )
  echo ""$SUB_NAME"=_sub_wrapper"
  ;;
esac
