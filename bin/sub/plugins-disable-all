#!/usr/bin/env bash
# shellcheck disable=SC1090

set -o errexit
set -o nounset
set -o pipefail
shopt -s inherit_errexit
[[ -n "${VERBOSE:+x}" ]] && set -o verbose
[[ -n "${DEBUG:-}" ]] && IS_DEBUG=true || IS_DEBUG=false

if (( $# > 0 )); then
  echo "Are you sure to disable all plugins?" >&2
  exit 3
fi

plugins=( $(a plugins-list) )
a plugins-disable "${plugins[@]}"
