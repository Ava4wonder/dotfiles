#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

# Provide sub completions
if [ "${1:-}" = "--complete" ]; then
  if [[ $COMP_CWORD -lt 3 ]]; then
    echo "open close --help"
  fi

  exit 0
fi

flag=${1:-}

if [[ $flag == open ]]; then
    touch "$HOME"/.fast_bashrc
    echo "$HOME/.fast_bashrc created"
elif [[ $flag == close ]]; then
    rm -f "$HOME"/.fast_bashrc
    echo "$HOME/.fast_bashrc removed"
else
    cat <<EOF
USAGE: a fast-bashrc open
       a fast-bashrc close
       a fast-bashrc --help
EOF
fi
