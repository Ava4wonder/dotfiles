#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

readonly SCRIPT_DIR="$(cd -P -- "$(dirname -- "$0")" && pwd -P)"
readonly TARGET="$SCRIPT_DIR"/../../bootstraps/recommends/custom_plugins

if [[ ${1:-} == '-d' ]] || [[ ${1:-} == '--dry-run' ]]; then
  echo "Installed plugins:"
  a plugins-list | tr ' ' '\n'
else
  a plugins-list | tr ' ' '\n' > "$TARGET"
  echo "Updated file: $TARGET"
fi
