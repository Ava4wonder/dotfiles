#!/usr/bin/env bash
# shellcheck disable=SC1090

set -o errexit
set -o nounset
set -o pipefail
[[ -n "${XTRACE:+x}" ]] && set -o xtrace
[[ -n "${VERBOSE:+x}" ]] && set -o verbose
[[ -n "${DEBUG:-}" ]] && IS_DEBUG=true || IS_DEBUG=false
[[ $- =~ [x] ]] && PS4='+[${BASH_SOURCE}:${LINENO}:${FUNCNAME[0]:+${FUNCNAME[0]}}()]: '

readonly args=("$@")

check_plugin() {
  local name=$1
  if [[ ! -f "$DOTFILE_DIR"/bash_it/plugins/enabled/"$name".plugin.bash ]]; then
    echo "Not found plugin '$name' enabled" >&2
    exit 1
  fi
}

disable_plugin() {
    unlink "$DOTFILE_DIR"/bash_it/plugins/enabled/"$name".plugin.bash
    echo "$name".plugin.bash disabled
}

for name in "${args[@]}"; do
  check_plugin "$name"
  disable_plugin "$name"
done
