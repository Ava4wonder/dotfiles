#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit
[[ -n "${VERBOSE:-}" ]] && set -o verbose

declare -A map=(
  [alpine]=3.10
  [bash]=5
  [ubuntu]=19.10
  [prolog]=stable
)

declare -A image_map=(
  [prolog]=swipl
)

# Provide sub completions
if [[ "${1:-}" == "--complete" ]]; then
  echo "${!map[@]}"
  exit 0
fi

if [[ $# == 0 ]]; then
  cat <<EOF
Usage: a run-docker [-v <version>] <image> [image-options]

Available Images: ${!map[@]}
EOF
  exit 0
fi

if [[ ${1:-} == '-v' ]]; then
  VERSION=$2
  shift 2
fi

readonly name=$1
shift

VERSION=${VERSION:-${map[$name]}}
IMAGE=${image_map[$name]:-$name}

echo "Run docker: $IMAGE:$VERSION"
docker run --rm -it "$@" "$IMAGE":"$VERSION"
