#!/usr/bin/env bash

declare -A map=(
  [hide]=civis
  [show]=cnorm
)

# Provide sub completions
if [[ "${1:-}" == "--complete" ]]; then
  echo "${!map[@]}" help
  exit 0
fi

if (( $# == 0 )) || [[ $1 == help ]] || [[ $1 == -h ]]; then
  cat <<EOF
Usage: a cursor [help|hide|show]

Commands:
help      Print help
hide      Hide cursor
show      Show cursor
EOF

  exit 0
fi

readonly name=$1
shift

tput "${map[$name]}"
