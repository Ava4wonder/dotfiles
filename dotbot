#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

# Copy from dotbot/tools/git-submodule/install

readonly BASEDIR="$(cd -P -- "$(dirname -- "$0")" && pwd -P)"

"${BASEDIR}/deps/dotbot/bin/dotbot" -d "${BASEDIR}" -c dotbot.conf.yaml
